<TargetEndpoint name="flexible-lines-v1">
    <Description/>
    <FaultRules/>
    <DefaultFaultRule name="target-fault">
        <Step>
            <Name>flowCallout.generalSecurityHeaders</Name>
        </Step>
        <Step>
            <Name>flowCallout.generalStackdriverLogging</Name>
        </Step>
    </DefaultFaultRule>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <FaultRules/>
                <Name>flowCallout.generalSecurityHeaders</Name>
            </Step>
        </Response>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>flowCallout.replaceTargetUrl</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <FaultRules/>
                <Name>assignMessage.addCors</Name>
            </Step>
        </Response>
    </PreFlow>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://timetable-admin-v1-flexible-lines-NAMESPACE.INGRESS_ENVIRONMENT/services/flexible-lines</URL>
    </HTTPTargetConnection>
</TargetEndpoint>